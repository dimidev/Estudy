<% title t('.title') %>

<div class="panel panel-default">
    <div class="panel-heading">
        <%= link_to fa_icon('plus', text: t('registrations.new.title')), new_student_registration_path(params[:student_id]), class:'pull-right btn btn-sm btn-primary' if (can? :manage, Registration) %>
        <h2 class="panel-title"><%= t('mongoid.models.registration.other') %></h2>
    </div><!--//panel-heading-->
  <div class="panel-body">
    <table id="registrations-table" class="datatable table table-hover table-striped" data-source="<%= student_registrations_path(params[:student_id], format: :json) %>">
      <thead>
      <tr>
        <th><%= t('mongoid.attributes.registration.title') %></th>
        <th class="text-center"><%= t('mongoid.models.course.other') %></th>
        <th class="text-center"><%= t('mongoid.attributes.course.ects') %></th>
        <th class="text-center"><%= t('mongoid.attributes.course.hours') %></th>
        <% if can? :manage, Registration %>
          <th class="no-sort text-center"><%= t('datatable.options') %></th>
        <% end %>
      </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div><!--//panel-body-->
</div><!--//panel-->
<%- if controller_name != 'sessions' %>
  <%= link_to t('devise.sessions.new.title'), new_session_path(resource_name, locale: I18n.locale) %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('devise.registrations.new.title'), new_registration_path(resource_name, locale: I18n.locale) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('devise.passwords.new.title'), new_password_path(resource_name, locale: I18n.locale) %><br />
<% end -%>
<header class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to Institution.first.title || Institution.first.short_title, root_path, class:'navbar-brand' %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="navbar-collapse">

      <ul class="nav navbar-nav navbar-right">
        <li class="flags">
          <%= link_to image_tag("flags/#{I18n.locale}.png") , '#' , class:'dropdown-toggle', data: {toggle: 'dropdown'} %>
          <ul class="dropdown-menu">
            <li class="dropdown-header"><%= t('header.languages.select_language') %></li>
            <% I18n.available_locales.each do |lang| %>
                <li>
                  <%= link_to locale: lang do %>
                      <%= image_tag("flags/#{lang}.png") %><%= t("languages.#{lang}") %>
                  <% end %>
                </li>
            <% end %>
          </ul>
        </li>

        <li class="divider"></li>

        <li class="dropdown">
          <%= link_to '#', class: 'dropdown-toggle', data: {toggle: 'dropdown'} do %>
              <%= header_nav_avatar %> <span class="caret"></span>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to fa_icon('user', text: t('header.user.my_account')), edit_path_by_user %></li>
            <li role="separator" class="divider"></li>
            <li><%= link_to fa_icon('sign-out', text: t('header.user.log_out')), logout_path %></li>
          </ul>
        </li>
      </ul><!--//navbar-nav-->
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</header>
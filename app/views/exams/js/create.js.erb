<% if @exam.errors.any? %>
$('.modal-body').find('.alert').remove();
$('.modal-body').prepend("<%= j render 'general/form_errors', resource: @exam %>");
<% else %>
window.location.href = "<%= j edit_exam_path(@exam) %>";
<% end %>

<% if notice || alert %>
$('.alert-warning').remove();
$('.modal-body').prepend("<%= j render 'general/flash_messages' %>");
<% end %>
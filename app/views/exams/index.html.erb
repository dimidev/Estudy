<% title t('.title') %>

<div class="panel panel-default">
  <% if can? :create, Exam %>
    <div class="panel-heading">
      <%= link_to fa_icon('plus', text: t('exams.new.title')), new_department_exam_path, class:'btn btn-sm btn-primary', remote: true %>
    </div>
  <% end %>
  <div class="panel-body">
    <table id="exams-table" class="datatable table table-hover table-striped" data-source="<%= department_exams_path(params[:department_id], format: :json) %>">
      <thead>
      <tr>
        <th class="text-center"><%= t('mongoid.attributes.timetable.period') %></th>
        <% if can? [:update, :destroy], Exam %>
          <th class="no-sort text-center"><%= t('datatable.options') %></th>
        <% end %>
      </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div><!--//panel-body-->
</div><!--//panel-->
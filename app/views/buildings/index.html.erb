<% title t('.title') %>

<div class="panel panel-default">
  <% if can?(:create, Building) %>
    <div class="panel-heading">
      <%= link_to fa_icon('plus', text: t('buildings.new.title')), new_building_path, class:'btn btn-sm btn-primary' %>
    </div>
  <% end %>
  <div class="panel-body">
    <table id="buildings-table" class="datatable table table-hover table-striped" data-source="<%= buildings_path(format: :json) %>">
      <thead>
      <tr>
        <th><%= t('mongoid.attributes.building.name') %></th>
        <th class="text-center"><%= t('mongoid.attributes.building.area') %></th>
        <th class="text-center"><%= t('mongoid.attributes.building.floors') %></th>
        <th class="text-center"><%= t('mongoid.models.hall.other') %></th>
        <% if can?([:update, :destroy], Building) || can?(:read, Hall) %>
          <th class="no-sort text-center"><%= t('datatable.options') %></th>
        <% end %>
      </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div><!--//panel-body-->
</div><!--//panel-->
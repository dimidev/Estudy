<% title t('.title') %>

<div class="panel panel-default">
  <div class="panel-heading">
    <%= link_to fa_icon('plus', text: t('halls.new.title')), new_building_hall_path(params[:building_id]), class:'btn btn-sm btn-primary pull-right' %>
    <h2 class="panel-title"><%= t('mongoid.models.building.other') %></h2>
  </div>
  <div class="panel-body">
    <table id="halls-table" class="datatable table table-hover table-striped" data-source="<%= building_halls_path(params[:building_id] ,format: :json) %>">
      <thead>
      <tr>
        <th><%= t('mongoid.attributes.hall.name') %></th>
        <th class="text-center"><%= t('mongoid.attributes.hall.type') %></th>
        <th class="text-center"><%= t('mongoid.attributes.hall.floor') %></th>
        <th class="text-center"><%= t('mongoid.attributes.hall.area') %></th>
        <th class="text-center"><%= t('mongoid.attributes.hall.seats') %></th>
        <th class="no-sort text-center"><%= t('datatable.options') %></th>
      </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div><!--//panel-body-->
</div><!--//panel-->
<% title t('.title') %>

<div class="panel panel-default">
  <% if can? :create, Timetable %>
    <div class="panel-heading">
      <%= link_to fa_icon('plus', text: t('timetables.new.title')), new_department_timetable_path(params[:department_id]), class:'btn btn-sm btn-primary' %>
    </div><!--//panel-heading-->
  <% end %>
  <div class="panel-body">
    <table id="timetables-table" class="datatable table table-hover table-striped" data-source="<%= department_timetables_path(params[:department_id], format: :json) %>">
      <thead>
      <tr>
        <th><%= t('mongoid.attributes.timetable.title') %></th>
        <th><%= t('mongoid.attributes.timetable.from') %></th>
        <th><%= t('mongoid.attributes.timetable.to') %></th>
        <% if can? [:update, :destroy], Timetable %>
          <th class="no-sort text-center"><%= t('datatable.options') %></th>
        <% end %>
      </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div><!--//panel-body-->
</div><!--//panel-->
<% title t('.title') %>

<div class="panel panel-default">
    <div class="panel-heading">
      <%= link_to fa_icon('plus', text: t('timetables.new.title')), new_department_timetable_path(params[:department_id]), class:'btn btn-sm btn-primary pull-right' %>
      <h2 class="panel-title"><%= t('mongoid.models.timetable.other') %></h2>
    </div><!--//panel-heading-->
  <div class="panel-body">
    <table id="timetables-table" class="datatable table table-hover table-striped" data-source="<%= department_timetables_path(params[:department_id], format: :json) %>">
      <thead>
      <tr>
        <th><%= t('mongoid.attributes.timetable.title') %></th>
        <th><%= t('mongoid.attributes.timetable.from') %></th>
        <th><%= t('mongoid.attributes.timetable.to') %></th>
        <th class="no-sort text-center"><%= t('datatable.options') %></th>
      </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div><!--//panel-body-->
</div><!--//panel-->
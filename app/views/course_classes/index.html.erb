<% title t('.title') %>

<div class="panel panel-default">
  <% if can? :create, CourseClass %>
    <div class="panel-heading">
      <%= link_to fa_icon('plus', text: t('course_classes.new.title')), new_department_course_class_path(params[:department_id]), remote: true, class:'btn btn-sm btn-primary' %>
    </div>
  <% end %>
  <div class="panel-body">
    <table id="course-classes-table" class="datatable table table-hover table-striped" data-source="<%= department_course_classes_path(params[:department_id], format: :json) %>">
      <thead>
      <tr>
        <th><%= Course.model_name.human %></th>
        <th class="text-center"><%= t 'mongoid.attributes.course.semester' %></th>
        <th class="text-center"><%= Hall.model_name.human %></th>
        <th><%= t 'mongoid.models.building.building' %></th>
        <th><%= Professor.model_name.human %></th>
        <th class="text-center"><%= t 'mongoid.models.student.other' %></th>
        <th class="text-center"><%= t 'mongoid.attributes.course_class.day' %></th>
        <th class="text-center"><%= t('mongoid.attributes.course_class.from') << ' - ' << t('mongoid.attributes.course_class.to') %></th>
        <th class="no-sort text-center"><%= t('datatable.options') %></th>
      </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div><!--//panel-body-->
</div><!--//panel-->
<% title t('.title') %>

<div class="panel panel-default">
  <% if can? :create, Professor %>
    <div class="panel-heading">
      <%= link_to fa_icon('plus', text: t('professors.new.title')), new_department_professor_path(params[:department_id]), class:'btn btn-sm btn-primary' %>
    </div><!--//panel-heading-->
  <% end %>
  <div class="panel-body">
    <table id="professors-table" class="datatable table table-hover table-striped" data-source="<%= department_professors_path(params[:department_id], format: :json) %>">
      <thead>
      <tr>
        <th><%= t('mongoid.attributes.user.name') %></th>
        <th><%= t('mongoid.attributes.user.lastname') %></th>
        <th><%= t('mongoid.attributes.user.email') %></th>
        <th><%= t('mongoid.attributes.professor.professor_type') %></th>
        <th class="text-center no-sort"><%= t('enumerize.hall.type.office') %></th>
        <% if can? [:update, :destroy], Professor %>
            <th class="no-sort text-center"><%= t('datatable.options') %></th>
        <% end %>
      </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div><!--//panel-body-->
</div><!--//panel-->
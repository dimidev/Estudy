<div role="tabpanel" class="tab-pane active fade in" id="general">

  <div class="row">
    <div class="col-md-3">
      <fieldset>
        <legend><%= t('mongoid.attributes.department.department_logo') %></legend>
        <%= image_tag f.object.department_logo.url(:medium), id:'avatar-img', class:'center-block img-responsive img-rounded' %>
        <div class="row">
          <%= f.input :department_logo, label: false, wrapper_html:{class:'col-sm-6'} do %>
                    <span class="btn btn-primary btn-block">
                      <%= fa_icon'upload',text: t('img_upload.upload') %>
                      <%= f.input_field :department_logo, id:'avatar-upload' %>
                    </span>
          <% end %>
          <div class="col-sm-6">
            <a id="avatar-delete" class="btn btn-danger btn-block"><%= fa_icon'trash', text: t('img_upload.delete') %></a>
          </div><!--//col-->
        </div><!--//row-->
      </fieldset>

    </div><!--//col-->

    <div class="col-md-9">
      <%= f.input :title %>
      <%= f.input :foundation_date %>

      <fieldset>
        <legend><%= t('legends.department.other_options') %></legend>
        <%= f.input :active, as: :boolean, inline_label: t('mongoid.attributes.department.active'), input_html:{class:'icheck'} %>
      </fieldset>
    </div><!--//col-->
  </div><!--//row-->

</div><!--//general-->
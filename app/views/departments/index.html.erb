<% title t('.title') %>

<div class="panel panel-default">
  <% if can?(:create, Department) %>
    <div class="panel-heading">
      <%= link_to fa_icon('plus', text: t('departments.new.title')), new_department_path, class:'btn btn-sm btn-primary' %>
    </div>
  <% end %>
  <div class="panel-body">
    <table id="departments-table" class="datatable table table-hover table-striped" data-source="<%= departments_path(format: :json) %>">
      <thead>
      <tr>
        <th><%= t('mongoid.attributes.department.title') %></th>
        <th class="text-center"><%= t('mongoid.attributes.department.foundation_date') %></th>
        <th class="text-center"><%= t('mongoid.attributes.department.status') %></th>
        <th class="text-center"><%= t('mongoid.models.admin.other') %></th>
        <th class="text-center"><%= t('mongoid.attributes.student.active_students') %></th>
        <th class="text-center"><%= t('mongoid.models.professor.other') %></th>
        <th class="no-sort text-center"><%= t('datatable.options') %></th>
      </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div><!--//panel-body-->
</div><!--//panel-->
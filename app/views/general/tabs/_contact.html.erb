<div role="tabpanel" class="tab-pane fade in" id="contact">

  <div class="form-group">
    <%= add_nested_resource f, :contacts, target: '.contacts', content: t('mongoid.models.contact.special') %>
  </div>

  <div class="contacts">
      <%= f.simple_fields_for :contacts, defaults:{label: false} do |c| %>
        <div class="row">
          <%= c.input :type, prompt: t('simple_form.prompts.contacts.type'), wrapper_html:{class:'col-sm-5'} %>
          <%= c.input :value, wrapper_html:{class:'col-sm-5'} %>
          <div class="col-sm-2 text-center">
            <%= remove_nested_resource c, content: false %>
          </div>
        </div><!--//row-->
      <% end %>
  </div><!--//contacts-->

</div><!--//contact-->
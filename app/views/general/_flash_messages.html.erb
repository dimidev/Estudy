<% if notice %>
    <div class="alert alert-success fade in alert-dismissible" role='alert'>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= fa_icon'check-circle-o', text: notice.html_safe %>
    </div>
<% elsif alert %>
    <div class="alert alert-warning fade in alert-dismissible">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= fa_icon'exclamation-circle', text: alert.html_safe %>
    </div>
<% end %>